generator client {
  provider = "prisma-client-js"
  output   = "../../backend/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String       @id @default(uuid())
  username String?      @unique
  name     String?
  email    String       @unique
  provider AuthProvider
  password String?
  balance  Int          @default(0)
}

enum AuthProvider {
  EMAIL
  GOOGLE
  GITHUB
}
